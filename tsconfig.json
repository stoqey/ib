{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "ES6"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "noImplicitAny": false, // TODO enabled this as soon as ported  all code is ported to TS
    "types": [
      "mocha",
      "node",
    ],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true  /* Disallow inconsistently-cased references to the same file. */
    // "isolatedModules": true,
  },
  "include": [
    "src/**/*",
    "types.d.ts",
  ],
  "exclude": [
    "src/**/*.spec.ts",
  ]
}

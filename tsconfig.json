{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "ES6"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "types.d.ts",
  ],
  "exclude": [
    "src/**/*test.ts",
  ]
}